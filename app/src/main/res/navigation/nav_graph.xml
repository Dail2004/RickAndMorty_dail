<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/characterFragment">

    <action android:id="@+id/action_global_detailsFragment"
        app:destination="@id/detailsFragment"/>

    <action android:id="@+id/action_global_detailEpisodeFragment"
        app:destination="@id/detailEpisodeFragment" />

    <action android:id="@+id/action_global_locationDetailFragment"
        app:destination="@id/locationDetailFragment" />

    <action android:id="@+id/action_global_dialogFragment"
        app:destination="@id/dialogFragment" />

    <fragment
        android:id="@+id/characterFragment"
        android:name="com.example.android3lesson2.ui.fragment.character.CharacterFragment"
        android:label="Character"
        tools:layout="@layout/fragment_character" />
    <fragment
        android:id="@+id/episodeFragment"
        android:name="com.example.android3lesson2.ui.fragment.episode.EpisodeFragment"
        android:label="Episode"
        tools:layout="@layout/fragment_episode" />
    <fragment
        android:id="@+id/locationFragment"
        android:name="com.example.android3lesson2.ui.fragment.location.LocationFragment"
        android:label="Location"
        tools:layout="@layout/fragment_location" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.android3lesson2.ui.fragment.character.detail.DetailsFragment"
        android:label="Detail Character"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/detailEpisodeFragment"
        android:name="com.example.android3lesson2.ui.fragment.episode.detail.DetailEpisodeFragment"
        android:label="Detail Episode"
        tools:layout="@layout/fragment_detail_episode" >
        <argument android:name="id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/locationDetailFragment"
        android:name="com.example.android3lesson2.ui.fragment.location.detail.LocationDetailFragment"
        android:label="Detail Location"
        tools:layout="@layout/fragment_location_detail" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/dialogFragment"
        android:name="com.example.android3lesson2.ui.fragment.character.dialog.DialogFragment"
        android:label="fragment_dialog"
        tools:layout="@layout/fragment_dialog" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>

</navigation>